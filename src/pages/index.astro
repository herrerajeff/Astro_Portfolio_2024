</Layout>

<style>
	.hero--container {
		line-height: 1.1;
		letter-spacing: -2px;
		color: var(--clr-amber-50);
		background-color: var(--clr-stone-950);
		padding-top: 10rem;
		padding-bottom: var(--space);
		border-bottom-left-radius: var(--space);
		border-bottom-right-radius: var(--space);
	}
	.hero--pill {
		width: clamp(100px, 5vw + 1rem, 150px);
		height: clamp(45px, 3vw + 1rem, 60px);
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 9999px;
		transform: translateY(5px);
		overflow: hidden;
	}
	.about {
		position: relative;
		align-items: start;
	}
	.about picture {
		width: 300px;
		max-width: 300px;
		position: absolute;
		left: 50%;
		transform: translate(-50%, 0%);
		transition: var(--transition);
	}
	.about img {
		height: auto;
		max-width: 300px;
		transition: var(--transition);
	}
	.about:hover picture {
		transform: translate(-50%, -20%);
	}
	.nyc {
		justify-content: center;
		align-items: center;
		position: relative;
		/* transition: var(--transition); */
		color: var(--clr-amber-50);
		background-color: var(--clr-amber-400);
	}
	.nyc svg {
		width: 45%;
		transform-origin: center;
		transition: all 350ms ease;
		transform: scale(1) rotate(0);
	}
	.nyc:hover {
		background-color: var(--clr-amber-50);
		color: var(--clr-stone-950);
	}
	.nyc:hover svg {
		transform: scale(1.9) rotate(-7deg);
	}
	.headline {
		font-family: "Eiko", 'Times New Roman', Times, serif;
		font-size: clamp(2.5rem, 3vw + 1rem, 4.5rem);
		width: 100%;
		max-width: 100rem;
	}
	.headline a {
		text-decoration: none;
		color: var(--clr-amber-50);
		transition: color 300ms ease-in-out;
		display: inline;
		position: relative;
	}
	.headline a:hover {
		color: var(--clr-amber-400);
	}
	.headline a span {
		color: var(--clr-amber-400);
		text-transform: uppercase;
		font-family: "Fraktion Mono", 'Courier New', Courier, monospace;
		font-size: 12px;
		letter-spacing: -0.3px;
		line-height: 1;
		display: inline;
		margin-right: 4px;
		vertical-align: super;
		transform: translateY(-1.75rem);
	}
	.current {
		grid-column: 1/13;
		font-family: "Fraktion Mono", 'Courier New', Courier, monospace;
		font-size: 12px;
		letter-spacing: -0.3px;
		text-transform: uppercase;
		max-width: 100%;
		margin-top: 1rem;
		margin-bottom: 9rem;
	}
	.current p {
		display: inline;
		opacity: 0.5;
	}
	.hero--contact {
		padding-inline: 0;
		grid-column: 1/13;
		font-family: "Fraktion Mono", 'Courier New', Courier, monospace;
		font-size: 12px;
	}
	.hero--contact-socials {
		grid-column: 1/9;
		opacity: .5;
	}
	.hero--contact-socials ul {
		list-style: none;
		padding-left: 0;
		display: flex;
		align-items: center;
		gap: 4px;
	}
	.hero--contact-email {
		grid-column: 11/13;
		justify-self: end;
		position: relative;
	}
	.contact--email-link {
		font-family: "Fraktion Mono", 'Courier New', Courier, monospace !important;
		font-size: 12px;
		color: var(--clr-stone-50);
		opacity: .5;
	}
	.contact--socials-link {
		color: var(--clr-stone-50);
	}
	#customAlert {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		background-color: var(--clr-amber-400);
		color: black;
		padding: 8px 16px;
		border-radius: 12px;
		z-index: 1000;
		display: flex;
		justify-content: center;
		align-items: center;
		white-space: nowrap;
		transition: var(--transition);
		letter-spacing: 0;
	}
	/* Alert */
	.hidden {
		opacity: 0;
		transform: translateY(10px);
		pointer-events: none;
	}
	.active {
		opacity: 1;
		transform: translateY(0);
		}
</style>

<script>
	document.addEventListener("DOMContentLoaded", () => {
			const link = document.getElementById("email-copy");
			link?.addEventListener("click", copyEmail);
	});

	function copyEmail(event: MouseEvent) {
		event.preventDefault(); // Prevent the default anchor behavior
		const email = "herrera.jeffrey@gmail.com";
		
		navigator.clipboard.writeText(email).then(() => {
			showCustomAlert("Copied 👍🏽");
		}).catch(err => {
			console.error('Could not copy email: ', err);
		});
	}

	function showCustomAlert(message: string) {
		const alertBox = document.getElementById("customAlert");
  
		// Check if alertBox exists before trying to access or modify it
		if (alertBox) {
			alertBox.textContent = message; // Safe to assign since alertBox is confirmed to exist
			alertBox.classList.remove("hidden");
			alertBox.classList.add("active");

			// Hide the alert after 2 seconds
			setTimeout(() => {
				alertBox.classList.remove("active");
				alertBox.classList.add("hidden");
			}, 2000);
		} else {
			console.error('Alert box not found'); // Handle the case where alertBox is null
		}
	}
</script>
